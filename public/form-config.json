{
  "submitEndpoint": "http://localhost:3001/api/setParticipantData",
  "redirectEndpoint": "/api/redirect",
  "redirectUrl": "https://example.com/success",
  "fields": [
    { "id": "name", "type": "text", "required": true },
    { "id": "yob", "type": "number", "required": true, "min": 1900, "max": 2024 },
    { "id": "gender", "type": "select", "required": true },
    { "id": "phone", "type": "tel", "required": true },
    { "id": "payment_method", "type": "select", "required": true },
    {
      "id": "bank_account_number",
      "type": "text",
      "required": true,
      "showWhen": { "fieldId": "payment_method", "hasValue": "bank_account" }
    },
    {
      "id": "ifsc_code",
      "type": "text",
      "required": true,
      "showWhen": { "fieldId": "payment_method", "hasValue": "bank_account" }
    },
    {
      "id": "upi_id",
      "type": "text",
      "required": true,
      "showWhen": { "fieldId": "payment_method", "hasValue": "upi_id" }
    }
  ],
